{
  "name": "my-monorepo",
  "private": true,
  "packageManager": "pnpm@9.0.0",
  "scripts": {
    "dev:main": "pnpm --filter main dev",
    "dev:admin": "pnpm --filter admin dev",
    "build": "pnpm -r build",
    "prod-build": "pnpm -r build && rm -rf dist && mkdir dist && cp -r packages/apps/main/dist/* dist/ && mkdir dist/admin && cp -r packages/apps/admin/dist/* dist/admin/"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.12",
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "typescript": "^5.9.2"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.8",
    "autoprefixer": "^10.4.21",
    "axios": "^1.7.0",
    "postcss": "^8.5.6",
    "react": "^18.3.0",
    "react-dom": "^18.3.0",
    "react-router-dom": "^7.8.2",
    "sass": "^1.77.0",
    "tailwindcss": "^4.1.8"
  }
}